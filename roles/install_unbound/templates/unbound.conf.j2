server:
    # Basic server settings
    verbosity: 1
    interface: 0.0.0.0
    port: {{ unbound_port }}
    do-ip4: yes
    do-udp: yes
    do-tcp: yes
    do-ip6: no
    access-control: 127.0.0.1/32 allow
    access-control: 192.168.0.0/16 allow  # Adjust according to your network
    root-hints: "{{ unbound_config_dir }}/root.hints"
    harden-glue: yes
    harden-dnssec-stripped: yes
    use-caps-for-id: no
    edns-buffer-size: 1232
    prefetch: yes
    num-threads: {{ unbound_threads }}
    cache-min-ttl: {{ unbound_cache_min_ttl }}
    cache-max-ttl: {{ unbound_cache_max_ttl }}
    rrset-cache-size: {{ unbound_rrset_cache_size }}
    msg-cache-size: {{ unbound_msg_cache_size }}

    # Logging
    logfile: "/var/log/unbound/unbound.log"
    log-queries: no
    log-replies: no
    log-servfail: yes
    log-local-actions: yes
